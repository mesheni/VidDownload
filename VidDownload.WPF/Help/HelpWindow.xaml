<Window xmlns:hc="https://handyorg.github.io/handycontrol"  x:Class="VidDownload.WPF.Help.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VidDownload.WPF.Help"
        mc:Ignorable="d"
        Title="Помощь" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Width="440" Height="450">
    <Grid Background="#FF1F1F1F">
        <StackPanel>
            <Label x:Name="LabelHelp" Content="by mesh"  VerticalAlignment="Top" FontFamily="Cascadia Code" Foreground="White" FontSize="20" FontWeight="Bold" Background="{x:Null}" Height="36" Padding="0,0,0,0" BorderThickness="0,0,0,0" Margin="0,10,0,0"/>

            <Label Content="2024 г." HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Cascadia Code" Foreground="White" FontSize="18" FontWeight="Bold" Background="{x:Null}" Padding="0,0,0,0" BorderThickness="0,0,0,0" Margin="0,10,0,0"/>

            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="Cascadia Code" FontWeight="Bold" Margin="0,50,0,0">
                <Hyperlink NavigateUri="https://vk.com/me_sheni" RequestNavigate="Hyperlink_Vk" TextDecorations="None">
                    CСЫЛКА НА ПАБЛИК ВК
                </Hyperlink>
            </TextBlock>

            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="Cascadia Code" FontWeight="Bold" Margin="0,10,0,0">
                <Hyperlink NavigateUri="https://github.com/mesheni" RequestNavigate="Hyperlink_Gh" TextDecorations="None">
                    ССЫЛКА НА GITHUB
                </Hyperlink>
            </TextBlock>

            <hc:ImageBlock x:Name="imgJojack" Source="/jojack.jpg" Width="400" ScrollViewer.VerticalScrollBarVisibility="Disabled" Height="200" Margin="10,20,10,10" MouseLeftButtonDown="imgJojack_MouseLeftButtonDown"/>
        </StackPanel>
    </Grid>
</Window>
